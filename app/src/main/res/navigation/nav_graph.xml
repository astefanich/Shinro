<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/title_destination">

    <fragment
        android:id="@+id/title_destination"
        android:name="io.astefanich.shinro.ui.TitleFragment"
        android:label="title_fragment"
        tools:layout="@layout/title_fragment">
        <action
            android:id="@+id/action_title_to_game"
            app:destination="@id/game_destination"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_title_to_instructions"
            app:destination="@id/instructions_destination"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left" />
        <action
            android:id="@+id/action_title_to_about"
            app:destination="@id/about_destination"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left" />
        <action
            android:id="@+id/action_title_to_progress"
            app:destination="@id/progress_destination"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left" />
    </fragment>
    <fragment
        android:id="@+id/game_destination"
        android:name="io.astefanich.shinro.ui.GameFragment"
        android:label="game_fragment"
        tools:layout="@layout/game_fragment">
        <argument
            android:name="boardId"
            android:defaultValue="0"
            app:argType="integer" />
        <action
            android:id="@+id/action_game_destination_self"
            app:destination="@id/game_destination"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/progress_destination"
        android:name="io.astefanich.shinro.ui.ProgressFragment"
        android:label="progress_fragment"
        tools:layout="@layout/progress_fragment" />
    <fragment
        android:id="@+id/about_destination"
        android:name="io.astefanich.shinro.ui.AboutFragment"
        android:label="about_fragment"
        tools:layout="@layout/about_fragment" />
    <fragment
        android:id="@+id/instructions_destination"
        android:name="io.astefanich.shinro.ui.InstructionsListFragment"
        android:label="instructions_fragment"
        tools:layout="@layout/instructions_list_fragment">
        <argument
            android:name="instructionType"
            app:argType="io.astefanich.shinro.domain.InstructionType" />
    </fragment>
    <fragment
        android:id="@+id/tips_destination"
        android:name="io.astefanich.shinro.ui.TipsFragment"
        android:label="tips_fragment"
        tools:layout="@layout/tips_fragment">
        <action
            android:id="@+id/action_tips_destination_to_instructions_destination"
            app:destination="@id/instructions_destination" />
    </fragment>
</navigation>