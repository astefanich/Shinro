<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.TipsFragment">

    <data>

        <variable
            name="fragment"
            type="io.astefanich.shinro.ui.TipsFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/trueBlack">

        <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="48sp">

            <com.google.android.material.chip.Chip
                android:id="@+id/how_to_play_chip"
                android:text="@string/how_to_play_title"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="How to Play"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/pathfinder_chip"
                android:text="@string/pathfinder_title"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Pathfinder"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/blocker_chip"
                android:text="@string/blocker_title"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Blocker"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/pigeonhole_chip"
                android:text="@string/pigeonhole_title"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Pigeonhole"/>
        </com.google.android.material.chip.ChipGroup>
    </LinearLayout>
</layout>
