<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.GameSummaryFragment">

    <LinearLayout
        android:id="@+id/game_over_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="48dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/game_over_winloss"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="game_win"
            android:textAlignment="center"
            android:textSize="48sp"
            android:textStyle="bold"
            tools:text="Victory!" />


        <TextView
            android:id="@+id/game_over_time"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Time: 45s"
            android:textAlignment="center"
            android:textStyle="bold"
            tools:text="Time 12:01" />

        <TextView
            android:id="@+id/game_over_points"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Points earned: 122000"
            android:textAlignment="center"
            android:textStyle="bold"
            tools:text="Points earned: 120000" />

        <TextView
            android:id="@+id/game_over_current_difficulty"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Current Difficulty: Easy"
            android:textAlignment="center"
            android:textStyle="bold"
            tools:text="Difficulty: Easy" />

        <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <com.google.android.material.chip.Chip
                android:id="@+id/new_game_chip"
                style="@style/ChipStyle"
                android:text="@string/new_game"
                android:textStyle="bold"
                tools:text="New Game" />

            <com.google.android.material.chip.Chip
                android:id="@+id/change_difficulty_chip"
                style="@style/ChipStyle"
                android:text="@string/change_difficulty"
                android:textStyle="bold"
                tools:text="Change Difficulty" />

        </com.google.android.material.chip.ChipGroup>
    </LinearLayout>
</layout>
