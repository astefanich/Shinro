            <!--                android:id="@+id/c0-1"-->
            <!--                app:layout_row="0"-->
            <!--                app:layout_column="1"-->
            <!--                android:padding="8dp"-->
            <!--                android:text="A"-->
            <!--                android:textAppearance="?android:attr/textAppearanceLarge" />-->
            <!--            <TextView-->
            <!--                android:id="@+id/c1-0"-->
            <!--                app:layout_row="1"-->
            <!--                app:layout_column="0"-->
            <!--                android:padding="8dp"-->
            <!--                app:text="A"/>-->
            <!--            <TextView-->
            <!--                android:id="@+id/c1-2"-->
            <!--                app:layout_row="1"-->
            <!--                app:layout_column="2"-->
            <!--                android:padding="8dp"-->
            <!--                app:text="A"/>-->
        </androidx.gridlayout.widget.GridLayout>

        <!--        <include-->
        <!--            android:id="@+id/board"-->
        <!--            layout="@layout/board"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginBottom="16dp"-->
